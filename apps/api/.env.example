# Database (local: use postgres from docker compose; same password as in docker-compose.yml)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/darital?schema=public

# Redis (local: use redis from docker compose)
REDIS_URL=redis://localhost:6379

# --- Connect to darital-arenda.uz DB from local ---
# 1. On VPS, expose Postgres on localhost only and restart:
#    docker compose -f docker-compose.prod.yml -f docker-compose.vps.yml -f docker-compose.remote-db.yml --env-file .env.production up -d
# 2. On your Mac, create SSH tunnel (use same password as POSTGRES_PASSWORD in .env.production):
#    ssh -L 5432:127.0.0.1:5432 root@193.203.163.148
# 3. In apps/api/.env set:
#    DATABASE_URL=postgresql://postgres:YOUR_PROD_PASSWORD@localhost:5432/darital?schema=public
# 4. Run backend locally (e.g. pnpm dev in apps/api). Keep the SSH session open while using.

# Authentication
JWT_SECRET=dev_change_me
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# --- If you get ENFILE (file table overflow) when running pnpm dev, run first in same terminal: ulimit -n 10240 ---
