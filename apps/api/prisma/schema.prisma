// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Role {
  SUPER_ADMIN
  ADMIN
  TENANT
}

enum UnitStatus {
  FREE
  BUSY
  MAINTENANCE
}

enum ContractStatus {
  DRAFT
  ACTIVE
  COMPLETED
  CANCELLED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
}

enum PaymentMethod {
  ONLINE
  OFFLINE
}

enum PaymentStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

enum PaymentProvider {
  CLICK
  PAYME
  UZUM
  NONE
}

enum ConversationStatus {
  OPEN
  PENDING
  CLOSED
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

enum SenderRole {
  TENANT
  ADMIN
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  CASHIER
  SUPPORT
  ANALYST
  TENANT_USER // For distinguishing between internal admin roles and external tenant users
}

// Document type enum
enum DocumentType {
  LEASE_AGREEMENT
  ID_COPY
  PASSPORT
  PAYMENT_RECEIPT
  CONTRACT_ATTACHMENT
  OTHER
}

// Models
model User {
  id            String         @id @default(cuid())
  email         String         @unique
  password      String
  fullName      String
  role          AdminRole      @default(ADMIN) // Updated to AdminRole
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  conversations Conversation[]
  auditLogs     AdminAuditLog[] @relation("Actor")

  @@map("users")
}

model Building {
  id          String   @id @default(cuid())
  name        String
  address     String?
  description String?
  totalUnits  Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  units       Unit[]

  @@map("buildings")
}

model Unit {
  id         String     @id @default(cuid())
  name       String
  buildingId String?
  building   Building?  @relation(fields: [buildingId], references: [id])
  price      Decimal
  area       Float?
  floor      Int?
  status     UnitStatus @default(FREE)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  contracts Contract[]

  @@index([buildingId])
  @@map("units")
}

model Tenant {
  id            String         @id @default(cuid())
  fullName      String
  phone         String
  email         String?        @unique
  password      String
  contracts     Contract[]
  documents     Document[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  balance       Balance?
  conversations Conversation[]
  notifications InAppNotification[]
  // Archive fields
  isArchived    Boolean        @default(false)
  archivedAt    DateTime?
  archivedBy    String?        // Admin user ID who archived
  archiveReason String?        // Reason for archiving

  @@index([phone])
  @@index([createdAt])
  @@index([isArchived])
}

model Document {
  id          String       @id @default(cuid())
  tenantId    String?
  tenant      Tenant?      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  contractId  String?
  paymentId   String?
  type        DocumentType
  name        String
  fileUrl     String
  fileSize    Int?
  mimeType    String?
  uploadedBy  String?      // Admin or tenant ID who uploaded
  createdAt   DateTime     @default(now())

  @@index([tenantId])
  @@index([contractId])
  @@index([paymentId])
  @@map("documents")
}

model Contract {
  id          String          @id @default(cuid())
  tenantId    String
  tenant      Tenant          @relation(fields: [tenantId], references: [id])
  unitId      String
  unit        Unit            @relation(fields: [unitId], references: [id])
  startDate   DateTime
  endDate     DateTime
  pdfUrl      String
  amount      Decimal
  status      ContractStatus  @default(DRAFT)
  notes       String?         // Additional contract notes/description
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  invoices    Invoice[]

  // Archive fields
  isArchived    Boolean        @default(false)
  archivedAt    DateTime?
  archivedBy    String?        // Admin user ID who archived
  archiveReason String?        // Reason for archiving

  @@index([tenantId])
  @@index([unitId])
  @@index([status])
  @@index([endDate])
  @@index([createdAt])
  @@index([isArchived])
}

model Invoice {
  id          String        @id @default(cuid())
  contractId  String
  contract    Contract      @relation(fields: [contractId], references: [id])
  dueDate     DateTime
  amount      Decimal
  status      InvoiceStatus @default(PENDING)
  payments    Payment[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Archive fields
  isArchived    Boolean        @default(false)
  archivedAt    DateTime?
  archivedBy    String?        // Admin user ID who archived
  archiveReason String?        // Reason for archiving

  @@index([contractId])
  @@index([status])
  @@index([dueDate])
  @@index([createdAt])
  @@index([isArchived])
}

model Payment {
  id          String         @id @default(cuid())
  invoiceId   String
  invoice     Invoice        @relation(fields: [invoiceId], references: [id])
  method      PaymentMethod
  provider    PaymentProvider @default(NONE)
  providerPaymentId String?   @unique
  externalRef String?
  rawPayload  Json?
  amount      Decimal
  status      PaymentStatus  @default(PENDING)
  paidAt      DateTime?
  createdAt   DateTime       @default(now())

  // Archive fields
  isArchived    Boolean        @default(false)
  archivedAt    DateTime?
  archivedBy    String?        // Admin user ID who archived
  archiveReason String?        // Reason for archiving

  @@index([invoiceId])
  @@index([status])
  @@index([paidAt])
  @@index([createdAt])
  @@index([isArchived])
}

model Balance {
  id          String   @id @default(cuid())
  tenantId    String   @unique
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
  current     Decimal  @default(0)
  updatedAt   DateTime @updatedAt
}


model TelegramUser {
  id        String   @id @default(cuid())
  tenantId  String?
  chatId    String   @unique
  role      Role     @default(TENANT)
  createdAt DateTime @default(now())
}

model TenantDevice {
  id        String   @id @default(cuid())
  tenantId  String
  fcmToken  String   @unique
  platform  String   // ios / android
  createdAt DateTime @default(now())

  @@index([tenantId])
  @@map("tenant_devices")
}

model NotificationPreference {
  id        String   @id @default(cuid())
  tenantId  String
  channel   String   // EMAIL | TELEGRAM | PUSH | SMS
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([tenantId, channel])
  @@index([tenantId])
  @@map("notification_preferences")
}

model Permission {
  id          String         @id @default(cuid())
  code        String         @unique // e.g. "contracts.read"
  name        String
  description String?
  roles       RolePermission[]

  @@map("permissions")
}

model RolePermission {
  id           String       @id @default(cuid())
  role         AdminRole
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([role, permissionId])
  @@map("role_permissions")
}

model AdminAuditLog {
  id        String   @id @default(cuid())
  actorId   String
  actor     User     @relation("Actor", fields: [actorId], references: [id])
  action    String
  subject   String?  // e.g., "contract-123", "user-abc"
  meta      Json?
  createdAt DateTime @default(now())

  @@index([actorId])
  @@map("admin_audit_logs")
}

model Conversation {
  id        String             @id @default(cuid())
  tenantId  String
  tenant    Tenant             @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  adminId   String?
  admin     User?              @relation(fields: [adminId], references: [id], onDelete: SetNull)
  topic     String?            // Topic/subject of the conversation
  status    ConversationStatus @default(PENDING)
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  messages  Message[]

  @@index([tenantId])
  @@index([adminId])
  @@index([status])
  @@index([tenantId, topic])
  @@map("conversations")
}

model Message {
  id             String        @id @default(cuid())
  conversationId String
  conversation   Conversation  @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderRole     SenderRole
  senderId       String
  content        String?       @db.Text
  fileUrl        String?
  status         MessageStatus @default(SENT)
  createdAt      DateTime      @default(now())

  @@index([conversationId])
  @@index([createdAt])
  @@map("messages")
}

model NotificationLog {
  id        String   @id @default(cuid())
  tenantId  String
  invoiceId String?
  type      String   // 'BEFORE_3_DAYS' | 'ON_DUE_DATE' | 'LATE' | 'CANCEL_WARNING'
  title     String
  body      String   @db.Text
  createdAt DateTime @default(now())

  @@index([tenantId])
  @@index([createdAt])
  @@map("notification_logs")
}

// In-app notifications for real-time notification center
model InAppNotification {
  id        String   @id @default(cuid())
  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type      String   // PAYMENT_DUE | PAYMENT_CONFIRMED | CONTRACT_EXPIRING | MESSAGE | SYSTEM
  title     String
  message   String   @db.Text
  data      Json?    // Additional data (invoiceId, paymentId, etc.)
  read      Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())

  @@index([tenantId])
  @@index([tenantId, read])
  @@index([createdAt])
  @@map("in_app_notifications")
}

// Email templates for customizable notifications
model EmailTemplate {
  id          String   @id @default(cuid())
  code        String   @unique // PAYMENT_REMINDER, PAYMENT_CONFIRMED, CONTRACT_EXPIRING, WELCOME, etc.
  name        String
  description String?
  subjectUz   String
  subjectRu   String
  subjectEn   String
  bodyUz      String   @db.Text
  bodyRu      String   @db.Text
  bodyEn      String   @db.Text
  variables   Json?    // Available variables: {tenant_name}, {amount}, {due_date}, etc.
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("email_templates")
}

// Archive Tables for Operational Data

model ArchivedMessage {
  id             String        @id @default(cuid())
  originalId     String        // Original message ID
  conversationId String
  senderRole     SenderRole
  senderId       String
  content        String?       @db.Text
  fileUrl        String?
  status         MessageStatus
  createdAt      DateTime
  archivedAt     DateTime      @default(now())

  @@index([conversationId])
  @@index([archivedAt])
  @@map("archived_messages")
}

model ArchivedConversation {
  id        String             @id @default(cuid())
  originalId String            // Original conversation ID
  tenantId  String
  adminId   String?
  topic     String?
  status    ConversationStatus
  createdAt DateTime
  updatedAt DateTime
  archivedAt DateTime          @default(now())

  @@index([tenantId])
  @@index([archivedAt])
  @@map("archived_conversations")
}

model ArchivedAuditLog {
  id        String   @id @default(cuid())
  originalId String  // Original audit log ID
  actorId   String
  action    String
  subject   String?
  meta      Json?
  createdAt DateTime
  archivedAt DateTime @default(now())

  @@index([actorId])
  @@index([archivedAt])
  @@map("archived_audit_logs")
}

model ArchivedNotification {
  id        String   @id @default(cuid())
  originalId String  // Original notification ID
  tenantId  String
  type      String
  title     String
  message   String   @db.Text
  data      Json?
  createdAt DateTime
  archivedAt DateTime @default(now())

  @@index([tenantId])
  @@index([archivedAt])
  @@map("archived_notifications")
}
