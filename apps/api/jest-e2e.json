{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "setupFiles": ["<rootDir>/test/jest-e2e.setup.ts"],
  "testMatch": ["<rootDir>/test/**/*.e2e-spec.ts"],
  "forceExit": true,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  }
}
