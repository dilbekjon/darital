{
  "name": "api",
  "version": "1.0.0",
  "description": "Darital Final API - NestJS Backend",
  "private": true,
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "postinstall": "prisma generate",
    "prestart": "prisma migrate deploy --schema=prisma/schema.prisma && node dist/rbac/seed.js",
    "start": "node dist/main",
    "start:prod": "prisma migrate deploy --schema=prisma/schema.prisma && node dist/rbac/seed.js && node dist/main",
    "start:worker": "tsx src/queues/notification.worker.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest -c jest-e2e.json --runInBand",
    "clean": "rm -rf dist",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "rbac:seed": "ts-node src/rbac/seed.ts",
    "rbac:seed:deploy": "npx prisma migrate deploy --schema=prisma/schema.prisma && npx prisma generate --schema=prisma/schema.prisma && pnpm build && node dist/rbac/seed.js",
    "admin:make:super": "ts-node prisma/make-super-admin.ts",
    "seed": "tsx prisma/seed.ts",
    "test:webhook": "tsx scripts/test-payment-webhook.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.7",
    "@nestjs/core": "^11.1.7",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.7",
    "@nestjs/platform-socket.io": "^11.1.7",
    "@nestjs/schedule": "^6.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.1.7",
    "@prisma/client": "^6.18.0",
    "@sentry/node": "^10.22.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.61.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "firebase-admin": "^13.5.0",
    "ioredis": "^5.8.2",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "nestjs-telegraf": "^2.8.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "prisma": "^6.18.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
