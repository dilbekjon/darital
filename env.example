# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=darital

# MinIO Configuration
# Dev defaults (if unset): endpoint=localhost, port=9000, access_key=minioadmin, secret_key=minioadmin, bucket=contracts
# These match the Docker Compose defaults. For production, you MUST set all of these explicitly.
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=contracts

# Application Configuration (examples)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/darital
REDIS_URL=redis://localhost:6379

# Email Configuration (SMTP)
# For LOCAL DEVELOPMENT: Use MailHog (already running in Docker)
# MailHog UI: http://localhost:8025
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=
MAIL_PASS=
MAIL_FROM=no-reply@darital.local

# For PRODUCTION: Use a real SMTP server (examples below)
# Gmail example:
# MAIL_HOST=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USER=your-email@gmail.com
# MAIL_PASS=your-app-password
# MAIL_FROM=your-email@gmail.com

# SendGrid example:
# MAIL_HOST=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USER=apikey
# MAIL_PASS=your-sendgrid-api-key
# MAIL_FROM=noreply@yourdomain.com

# Sentry Configuration (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id

# Firebase Cloud Messaging (FCM) Configuration (optional)
# FCM_KEY=<base64-encoded-firebase-service-account-json>

# Telegram Bot Configuration (optional)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id

# SMS Provider Configuration (optional)
# SMS_PROVIDER=twilio  # or 'vonage', 'aws-sns', etc.
# SMS_API_KEY=your-sms-api-key
# SMS_API_SECRET=your-sms-api-secret
# SMS_FROM_NUMBER=+1234567890

# Checkout.uz Configuration
# CHECKOUTUZ_API_KEY=your-checkoutuz-api-key
CHECKOUTUZ_BASE_URL=https://checkout.uz/api
CHECKOUTUZ_TIMEOUT_MS=10000
